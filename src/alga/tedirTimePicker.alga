@define refs {
  name: tedirTimePicker;
}

@alga {refs.name} {
  .{refs.name} {
    
    .tedirTimeGroup {
      ref: display-flex padding-0.75rem;
      
      .group:not(:first-child) {
        ref: marginLeft-0.75rem;
      }
      
      button.groupItem {
        ref: width-64px display-flex justifyContent-center;
      }
      
      .tedirTimeInput {
        ref: width-64px fontSize-0.85rem textAlign-center;
      }
    }
  }
}
